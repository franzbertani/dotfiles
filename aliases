alias ssh="TERM=xterm-256color ssh"

alias tx="tar -xzvf"
alias tc="tar -czvf"

alias vim="nvim"
alias vimrc="nvim ~/.config/nvim/init.vim"

alias del="rmtrash"

alias gdm="git add . ; git commit -m \"commento inutile\"; git push"

alias python="python3"

alias ls="lsd --group-dirs first"
alias l="ls -l"
alias la="ls -a"
alias lla="ls -la"
